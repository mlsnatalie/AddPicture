<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Complete" parent="Button">
        <item name="android:layout_width">111dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">完成</item>
        <item name="android:textSize">@dimen/camera_mediums_size</item>
        <item name="android:textColor">@color/camera_white</item>
        <item name="android:background">@drawable/camera_bg_action_circle_red</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Button.ReRecord" parent="Button">
        <item name="android:layout_width">111dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">重新录制</item>
        <item name="android:textSize">@dimen/camera_mediums_size</item>
        <item name="android:textColor">@color/camera_red</item>
        <item name="android:background">@drawable/camera_bg_re_record</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Button">
    </style>

    <!--image selector-->
    <style name="ImageSelectorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/camera_white_main</item>
        <item name="android:textSize">@dimen/camera_mediums_size</item>
    </style>

</resources>
